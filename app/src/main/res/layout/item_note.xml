<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1.5dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/note_background"
        android:fontFamily="@font/open_sans_regular"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/outline_edit_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ayush Sabharwal" />

    <ImageView
        android:id="@+id/outline_edit_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="1.5dp"
        android:background="@drawable/note_background"
        android:padding="6dp"
        android:src="@drawable/outline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/text"
        app:layout_constraintEnd_toStartOf="@+id/outline_delete_forever_24"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toTopOf="@+id/text" />

    <ImageView
        android:id="@+id/outline_delete_forever_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/note_background"
        android:padding="6dp"
        android:src="@drawable/outline_delete_forever_24"
        app:layout_constraintBottom_toBottomOf="@+id/outline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/outline_edit_24"
        app:layout_constraintTop_toTopOf="@+id/outline_edit_24" />

</androidx.constraintlayout.widget.ConstraintLayout>