<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonFragment">

    <TextView
        android:id="@+id/your_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans_regular"
        android:text="@string/your_details"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/outline_close_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/note_background"
        android:padding="6dp"
        android:src="@drawable/outline_close_24"
        app:layout_constraintBottom_toBottomOf="@+id/your_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/your_details" />

    <ImageView
        android:id="@+id/personPhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@color/note_background_color"
        android:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_details"
        tools:src="@drawable/outline_person_24" />

    <TextView
        android:id="@+id/person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personPhoto"
        tools:text="Name - Ayush Sabharwal" />

    <TextView
        android:id="@+id/personEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/person_name"
        app:layout_constraintStart_toStartOf="@id/person_name"
        app:layout_constraintTop_toBottomOf="@+id/person_name"
        tools:text="Email - ayushbusinesses29@gmail.com" />

    <TextView
        android:id="@+id/notes_created"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/app_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/personEmail"
        app:layout_constraintStart_toStartOf="@id/personEmail"
        app:layout_constraintTop_toBottomOf="@+id/personEmail"
        tools:text="Notes created - 25" />

    <TextView
        android:id="@+id/notes_edited"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/note_background_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/notes_created"
        app:layout_constraintStart_toStartOf="@id/notes_created"
        app:layout_constraintTop_toBottomOf="@+id/notes_created"
        tools:text="Notes edited - 25" />

    <TextView
        android:id="@+id/notes_deleted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/clear_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/notes_edited"
        app:layout_constraintStart_toStartOf="@+id/notes_edited"
        app:layout_constraintTop_toBottomOf="@+id/notes_edited"
        tools:text="Notes deleted - 25" />

</androidx.constraintlayout.widget.ConstraintLayout>